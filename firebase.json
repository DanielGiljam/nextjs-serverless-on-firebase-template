{
  "functions": {
    "source": ".",
    "predeploy": [
      "npm run build",
      "mkdir -p public/_next/static",
      "cp -Rp .next/static/ public/_next/static"
    ]
  },
  "hosting": [
    {
      "target": "mui-react-njs-cfr-template",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/",
          "function": "next-index"
        },
        {
          "source": "/about",
          "function": "next-about"
        }
      ]
    },
    {
      "target": "serverless",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/",
          "function": "next-serverless-index"
        },
        {
          "source": "/about",
          "function": "next-serverless-about"
        }
      ]
    }
  ]
}
