{
  "functions": {
    "source": ".",
    "predeploy": [
      "rm -rf .next",
      "npm run build",
      "rm -rf public/_next/static",
      "mkdir -p public/_next/static",
      "cp -Rp .next/static/ public/_next/static"
    ]
  },
  "hosting": {
    "cleanUrls": true,
    "headers": [
      {
        "source": "string-resources/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "public": "public",
    "rewrites": [
      {
        "source": "/",
        "function": "next-index"
      },
      {
        "source": "/@(en|sv|fi){,/**}",
        "function": "next-lang"
      }
    ]
  }
}
